from __future__ import unicode_literals

from django.conf import settings
from django.urls import reverse_lazy
from django.conf.urls import include, url
from django.conf.urls.static import static
from django.contrib import admin
from django.views.generic.base import RedirectView
from rest_framework.routers import DefaultRouter
from rest_framework_swagger.views import get_swagger_view

from users.views import UserViewSet
from iso.views import IsoBuildViewSet

schema_view = get_swagger_view(title='ISOaaS API')

router = DefaultRouter()
router.register(r'users', UserViewSet)
router.register(r'iso', IsoBuildViewSet)

raise Exception("{} {} {} {}".format(settings.MEDIA_URL, settings.MEDIA_ROOT,
                                     len(settings.MEDIA_URL), len(settings.MEDIA_ROOT)))
urlpatterns = [
    url(r'^admin/', admin.site.urls),
    url(r'^v1/docs/', schema_view),
    url(r'^v1/', include('authentication.urls')),
    url(r'^v1/', include(router.urls)),

    # the 'api-root' from django rest-frameworks default router
    # http://www.django-rest-framework.org/api-guide/routers/#defaultrouter
    url(r'^$', RedirectView.as_view(url=reverse_lazy('api-root'), permanent=False)),

] + static(settings.MEDIA_URL, document_root=settings.MEDIA_ROOT)
