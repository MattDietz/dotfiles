    # Media files
    MEDIA_ROOT = join(os.path.dirname(BASE_DIR), 'media')
    MEDIA_URL = values.Value('/media/')
    var = os.environ.get("DJANGO_MEDIA_URL")
    raise Exception("{} {} {} {}".format(MEDIA_URL, values.Value("/media/"), var, len(var)))

